# Example Terraform variables file
# Copy to terraform.tfvars or use -var-file flag with environment-specific files

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------

environment = "dev"

# -----------------------------------------------------------------------------
# MongoDB Atlas
# -----------------------------------------------------------------------------

# Get from Atlas: Organization Access Manager > API Keys
mongodb_atlas_public_key  = ""
mongodb_atlas_private_key = ""

# Get from Atlas: Organization Settings > General
mongodb_atlas_org_id = ""

# Project and cluster settings
mongodb_project_name = "family-recipes"
mongodb_cluster_name = "family-recipes"
mongodb_cluster_tier = "M0"  # Free tier
mongodb_region       = "US_EAST_1"

# Database credentials
mongodb_db_username = "family_recipes_app"
mongodb_db_password = ""  # Generate a strong password

# -----------------------------------------------------------------------------
# Vercel
# -----------------------------------------------------------------------------

# Get from Vercel: Settings > Tokens
vercel_api_token = ""

# Optional: Get from Vercel: Team Settings > General
vercel_team_id = null

# Get from Vercel: Project Settings > General
vercel_project_id = ""

# -----------------------------------------------------------------------------
# Grafana Cloud
# -----------------------------------------------------------------------------

# Get from Grafana Cloud: Stack details
grafana_url              = "https://your-stack.grafana.net"
grafana_auth             = ""  # Service account token with Admin role
grafana_cloud_stack_slug = ""
